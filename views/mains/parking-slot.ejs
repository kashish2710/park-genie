<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parking Slot Availibility</title>
    <link rel="stylesheet" href="/css/parking-slot.css">
    <link rel="icon" href="/images/logo.png">
</head>
<body>
    <h1 class="glow" id="typing-container">Parking Slot Availability</h1>
    <a href="#discuss" class="discuss-tag">Want to discuss something ? </a>
    <div id="parking-slot">
        <% if (slots.length === 0) { %>
            <p>No slots available.</p>
        <% } else { %>
            <% slots.forEach(slot => { %>
                <div class="slot <%= slot.isBooked ? 'occupied' : 'available' %>">
                    <span><%= slot.slotNumber %></span>
                    <br>
                    <span id="time-left-<%= slot.slotNumber %>">
                        <% if (slot.isBooked) { %>
                            <span class="time-left" id="time-left-<%= slot.slotNumber %>">Loading...</span>
                        <% } %>
                    </span>
                    <% if (!slot.isBooked) { %>
                        <form action="/next" method="POST">
                            <input type="hidden" name="slotNumber" value="<%= slot.slotNumber %>">
                            <button type="submit" class="book-btn">Book</button>
                        </form>
                    <% } else { %>
                        
                    <%}%>
                </div>
            <% }); %>
        <% } %>
    </div>
    <br>
    <div id="discuss">
    <div class="container">
        <h2>Discussion Forum</h2>
        <div class="discussion-box">
            <textarea id="comment" placeholder="Write your comment..."></textarea>
            <button onclick="postComment()">Post</button>
        </div>
        <div class="comments" id="comments"></div>
    </div>

    <div class="container feedback">
        <h2>Give Your Feedback</h2>
        <div class="stars" id="stars">
            <span data-value="1">â˜…</span>
            <span data-value="2">â˜…</span>
            <span data-value="3">â˜…</span>
            <span data-value="4">â˜…</span>
            <span data-value="5">â˜…</span>
        </div>
        <p id="ratingText">Rate us!</p>
        <p class="thank-you" id="thankYou">Thank you for your feedback! ðŸ’–</p>
    </div>
    </div>
    <script src="/js/parking-slot.js"></script>
</body>
</body>
</html>
